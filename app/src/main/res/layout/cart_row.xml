<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white" android:layout_marginBottom="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/linearLayout" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="26dp"
    >
        <TextView
                android:text="Quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cartProductQuantity_txt"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cartProductQuantity_value"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/linearLayout2" android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="28dp">
        <TextView
                android:id="@+id/cartProductPrice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                tools:layout_editor_absoluteY="59dp" tools:layout_editor_absoluteX="214dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:text="140"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cartProductPrice_value"
                tools:layout_editor_absoluteY="59dp" tools:layout_editor_absoluteX="262dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="30dp"
            android:id="@+id/linearLayout3" android:layout_marginTop="3dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2" android:layout_marginBottom="3dp"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Product Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productAddedToCart_text"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productAddedToCart_value"
        />
    </LinearLayout>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_product"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp" app:layout_constraintDimensionRatio="1:1"/>

</android.support.constraint.ConstraintLayout>