<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/suggestionCardView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp" android:paddingStart="5dp"
                android:id="@+id/SuggestedProductLayout">
            <TextView
                    android:text="Product Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/suggestedProductName_txt"
                    android:layout_weight="1"
                    android:textSize="20sp" android:paddingStart="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="30dp" android:paddingStart="5dp"
                android:id="@+id/SuggestedProductCategoryLayout">
            <TextView
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/suggestedProductCategory_txt"
                    android:layout_weight="1"
                    android:textSize="16dp" android:paddingStart="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginBottom="5dp"
                android:paddingStart="5dp" android:id="@+id/SuggestedProductCountLayout">
            <TextView
                    android:text="Count"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" android:id="@+id/suggestedProductCount_txt"
                    android:layout_weight="1"
                    android:textSize="12dp" android:paddingStart="5dp"/>
            <TextView
                    android:text="Sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/suggestedProductCount_value"
                    android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>