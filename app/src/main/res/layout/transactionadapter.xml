<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transactionAdapter_layout"
        android:layout_margin="10dp">

    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content" android:id="@+id/cardView"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_marginBottom="8dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/transactionProduct_linearLayout1"
                app:layout_constraintBottom_toTopOf="@id/transactionProduct_linearLayout2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
        >
            <TextView
                    android:text="Description"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="51dp" android:id="@+id/transactionProductDesc_txt"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:text="E.g LifeBoy"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="172dp" android:id="@+id/transactionProductDesc_value"
                    android:layout_marginStart="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionProduct_linearLayout2"
                app:layout_constraintTop_toBottomOf="@id/transactionProduct_linearLayout1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp">
            <TextView
                    android:text="Quantity"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="85dp"
                    tools:layout_editor_absoluteX="51dp" android:id="@+id/transactionProductQuantity_txt"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:text="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="83dp"
                    tools:layout_editor_absoluteX="131dp" android:id="@+id/transactionProductQuantity_value"
                    android:layout_marginStart="30dp"/>
            <TextView
                    android:text="Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="85dp"
                    tools:layout_editor_absoluteX="209dp" android:id="@+id/textView21"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:text="Rs."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="83dp"
                    tools:layout_editor_absoluteX="260dp" android:id="@+id/textView23"
                    android:layout_marginStart="15dp"/>
            <TextView
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="83dp"
                    tools:layout_editor_absoluteX="279dp" android:id="@+id/transactionProductPrice_value"
                    android:layout_marginStart="2dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>